{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": true,
    "allowJs": true,
    "removeComments": false,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "paths": {
      "headers/*": ["src/backend_requests/headers/*"],
      "utils/*": ["src/backend_requests/utils/*"],
      "assertions/*": ["src/Resources/assertions/*"]
    }
  }
}
